include common/mixins

block variables

doctype html
html
  head
    meta(charset="utf-8")
    title #{title}
    meta(content="alexsandr kuznetsov" name="author")
    meta(content="" name="description")
    meta(content="" name="keywords")
    meta(content="width=device-width, initial-scale=1" name="viewport")
    meta(content="ie=edge" http-equiv="x-ua-compatible")

    //- favicon block start
    <link rel="shortcut icon" href="assets/img/viking.png" type="image/png">
    //- favicon block end

    link(rel='stylesheet' href='/assets/css/foundation.css')
    link(rel='stylesheet' href='/assets/css/app.css')
    script(src='assets/js/foundation.js' defer)

    <!--[if lt IE 9]>
    script(src="http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js")
    <![endif]-->

  body
    .wrapper
        div(class="" + addclass)
            include common/_preloader
            include common/_nav
            include common/_header

            block content

        //maincontent
    //wrapper

    include common/_footer
    script(src='assets/js/app.js' defer)
    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBrUpURhUzcB2mh9BB3II8gI_mcJeCDwlA&signed_in=true&callback=initMap" async defer)